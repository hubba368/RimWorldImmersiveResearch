<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>TestComputerObj</defName>
    <label>Datadisk Analyzer</label>
    <description>A robust machine with the capability to analyse and decode various types of datadisks.</description>
    <thingClass>ImmersiveResearch.Building_LoreComputer</thingClass>
    <graphicData>
      <texPath>Things/Building/DiskAnalyzer/LoreComputer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rect>(0.05,0.05,0.95,0.95)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>150</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.8</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToMake>2500</WorkToMake>
      <Flammability>0.7</Flammability>
      <Beauty>2</Beauty>
    </statBases>
    <tickerType>Rare</tickerType>
    <canOverlapZones>false</canOverlapZones>
    <size>(1,1)</size>
    <selectable>true</selectable>
    <rotatable>true</rotatable>
    <designationCategory>Misc</designationCategory>
    <costList>
      <Steel>120</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <constructEffect>ConstructMetal</constructEffect>
    <killedLeavings>
      <ChunkSlagSteel>1</ChunkSlagSteel>
    </killedLeavings>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>75</basePowerConsumption>
        <shortCircuitInRain>true</shortCircuitInRain>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>5</glowRadius>
        <glowColor>(10,15,75,0)</glowColor>
      </li>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.1</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>
    <placeWorkers>
	<li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <constructionSkillPrerequisite>1</constructionSkillPrerequisite>
  </ThingDef>

</Defs>